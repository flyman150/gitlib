#!/bin/bash

# 检查 clang-format 是否安装
if ! command -v clang-format &> /dev/null; then
    echo "错误: clang-format 未安装。请先安装 clang-format。"
    exit 1
fi

# 获取所有待提交的 C/C++ 文件
files=$(git diff --cached --name-only --diff-filter=ACM | grep -E '\.(c|cpp|h|hpp)$' || true)

if [ -z "$files" ]; then
    echo "没有需要格式化的 C/C++ 文件。"
    exit 0
fi

# 格式化所有文件
echo "正在格式化以下文件:"
echo "$files"

for file in $files; do
    # 格式化文件
    clang-format -i "$file"
    # 将格式化后的文件添加到暂存区
    git add "$file"
done

echo "代码格式化完成。"
exit 0 